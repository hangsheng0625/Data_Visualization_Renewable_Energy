{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 600,
  "title": {
    "text": "Global Renewable Energy Share (% of Equivalent Primary Energy)",
    "subtitle": "Use the slider to change the year. Gray areas indicate no data available.",
    "font": "serif",
    "fontSize": 17,
    "align": "center",
    "subtitleFont": "serif",
    "subtitleFontSize": 14,
    "subtitleColor": "gray"
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#dcf3fe"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hangsheng0625/Data_Visualization_Renewable_Energy/main/js/ne_110m_graticules_30.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#6e6c6c"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hangsheng0625/Data_Visualization_Renewable_Energy/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available for ' + datum.properties.NAME + ' in ' + Year_selection",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "darkgray",
        "stroke": "navy",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hangsheng0625/Data_Visualization_Renewable_Energy/main/data/renewable-share-energy-(map).csv"
      },
      "transform": [
        {
          "filter": "datum.Year == Year_selection"
        },
        {
          "lookup": "Entity",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/hangsheng0625/Data_Visualization_Renewable_Energy/main/js/ne_110m_admin_0_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME",
            "fields": ["type", "geometry", "properties"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "navy", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geometry", "type": "geojson"},
        "color": {
          "field": "Renewables (% equivalent primary energy)",
          "type": "quantitative",
          "scale": {
            "domain": [0, 100],
            "range": ["#ffffd4", "#fed98e", "#fe9929", "#d95f0e", "#993404"]
          },
          "title": "Renewable Energy Share (%)"
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {
            "field": "Renewables (% equivalent primary energy)",
            "type": "quantitative",
            "title": "Renewable Energy Share(%)",
            "format": ".2f"
          },
          {"field": "Year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "mark": {"type": "text", "fontSize": 16, "fontWeight": "bold"},
      "encoding": {
        "x": {"value": 400},
        "y": {"value": 30},
        "text": {"field": "Year_selection"}
      }
    }
  ]
}