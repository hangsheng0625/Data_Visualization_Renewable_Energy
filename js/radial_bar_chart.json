{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 700,
  "height": 700,
  "padding": 5,
  "title": "Air pollution is ranked as the second deadliest threat to human health in 2021 ",
  "signals": [
    {
      "name": "padAngle", "value": 0.02
    },
    {
      "name": "bandPadding", "value": 0.1
    },
    {
      "name": "innerRadius", "value": 60
    }
  ],
  
  "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/hangsheng0625/Data_Visualization_Renewable_Energy/main/data/deaths-types.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "table",
      "source": "source",
      "transform": [
        {
          "type": "window",
          "sort": {"field": "Total_Number", "order": "descending"},
          "ops": ["row_number"],
          "as": ["rank"]
        }
      ]
    }
  ],
  
  "scales": [
    {
      "name": "typeScale",
      "type": "band",
      "paddingInner": {"signal": "bandPadding"},
      "range": [{"signal": "innerRadius"}, {"signal": "width / 2 - 10"}],
      "domain": {
        "data": "table",
        "field": "Type",
        "sort": {"field": "Total_Number", "order": "ascending"}
      }
    },
    {
      "name": "angleScale",
      "type": "linear",
      "range": [0, {"signal": "1.5 * PI"}],  
      "domain": {"data": "table", "field": "Total_Number"}
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "Type",
        "sort": {"field": "Total_Number", "order": "ascending"}
      },
      "range": {"scheme": "category10"}
    }
  ],
  
  "marks": [
    {
      "type": "arc",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"}
        },
        "update": {
          "fill": {"scale": "colorScale", "field": "Type"},
          "startAngle": {"value": 0},
          "endAngle": {"scale": "angleScale", "field": "Total_Number"},
          "padAngle": {"signal": "padAngle"},
          "innerRadius": {"scale": "typeScale", "field": "Type"},
          "outerRadius": {
            "scale": "typeScale", 
            "field": "Type", 
            "offset": {"scale": "typeScale", "band": 1}
          },
          "cornerRadius": {"value": 10},  
          "tooltip": {
            "signal": "datum.Type + ': ' + format(datum.Total_Number, ',.0f')"  
          }
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"},
          "radius": {"scale": "typeScale", "field": "Type", "offset": 20},  
          "theta": {"value": 0},  
          "fill": {"value": "black"},
          "text": {"signal": "datum.Type + ': ' + format(datum.Total_Number/1000000, ',.2f') + ' million'"},  
          "align": {"value": "right"},
          "baseline": {"value": "middle"}
        }
      }
    }
  ]
}
