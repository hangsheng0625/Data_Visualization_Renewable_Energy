{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 600,
  "height": 400,
  "padding": 5,
  "title": {
    "text": "How dangerous are Air Pollution?",
    "color": "#311e03",
    "fontSize": 32,
    "dy": 0,
    "fontWeight": "bold",
    "offset": 30,
    "anchor": "middle"
  },
  "background": "transparent",
  "signals": [
    {
      "name": "padAngle", "value": 0.02
    },
    {
      "name": "bandPadding", "value": 0.1
    },
    {
      "name": "innerRadius", "value": 60
    },
    {
      "name": "selectedType",
      "value": null 
    }
  ],
  "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/hangsheng0625/Data_Visualization_Renewable_Energy/main/data/deaths-types.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "table",
      "source": "source",
      "transform": [
        {
          "type": "window",
          "sort": {"field": "Total_Number", "order": "descending"},
          "ops": ["row_number"],
          "as": ["rank"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "typeScale",
      "type": "band",
      "paddingInner": {"signal": "bandPadding"},
      "range": [{"signal": "innerRadius"}, {"signal": "width / 2 - 10"}],
      "domain": {
        "data": "table",
        "field": "Type",
        "sort": {"field": "Total_Number", "order": "ascending"}
      }
    },
    {
      "name": "angleScale",
      "type": "linear",
      "range": [0, {"signal": "1.5 * PI"}],
      "domain": {"data": "table", "field": "Total_Number"}
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "Type",
        "sort": {"field": "Total_Number", "order": "ascending"}
      },
      "range": [
        "#FFE700", 
        "#FFB000", 
        "#BF6400", 
        "#A13300", 
        "#820300" 
      ]
    },
    {
      "name": "borderColorScale",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "Type"
      },
      "range": [
        "#FFE700", 
        "#FFB000", 
        "#BF6400", 
        "#A13300", 
        "#820300"  
      ]
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"}
        },
        "update": {
          "fill": {
            "scale": "colorScale", 
            "field": "Type"
          },
          "stroke": {
            "scale": "borderColorScale", 
            "field": "Type"  
          },
          "strokeWidth": {"value": 2}, 
          "startAngle": {"value": 0},
          "endAngle": {"scale": "angleScale", "field": "Total_Number"},
          "padAngle": {"signal": "padAngle"},
          "innerRadius": {"scale": "typeScale", "field": "Type"},
          "outerRadius": {
            "scale": "typeScale",
            "field": "Type",
            "offset": {"scale": "typeScale", "band": 1}
          },
          "cornerRadius": {"value": 10},
          "tooltip": {
            "signal": "datum.Type + ': ' + format(datum.Total_Number, ',.0f')"
          },
          "opacity": {
            "signal": "datum.Type === selectedType ? 1 : 1" 
          }
        },
        "on": [
          {
            "events": {"type": "click"},
            "update": "datum.Type"  
          }
        ],
        "hover": {
          "fill": {"value": "lightyellow"},
          "outerRadius": {
            "scale": "typeScale",
            "field": "Type",
            "offset": {"scale": "typeScale", "band": 1},
            "multiplier": 1.9 
          }
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"signal": "width / 2.1"},
          "y": {"signal": "height / 2"},
          "radius": {"scale": "typeScale", "field": "Type", "offset": 20},
          "theta": {"value": 0},
          "fill": {"value": "black"},
          "text": {"signal": "datum.Type"},
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 16}
        }
      }
    }
  ]
}
